<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistTrackActivity"
    android:background="@color/colourBlack">

    <LinearLayout
        android:id="@+id/main9_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@mipmap/ic_launcher_play_blackwhite" />

        <TextView
            android:id="@+id/main9_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Şarkılar"
            android:textColor="@color/colourWhite"
            android:textSize="60dp" />

        <ImageButton
            android:id="@+id/main9_stop"
            android:layout_width="44dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:background="@null"
            android:src="@android:drawable/ic_media_pause" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main9_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main9_linear"></android.support.v7.widget.RecyclerView>

</RelativeLayout>